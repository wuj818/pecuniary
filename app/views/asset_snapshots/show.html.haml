- @title = @snapshot

.page-header
  .header-buttons
    = link_to @asset, class: 'btn btn-large' do
      %i.icon-arrow-left
      Back

    = link_to [:edit, @snapshot], class: 'btn btn-large btn-info' do
      %i.icon-edit
      Edit

  %h1
    = link_to @asset, @asset
    Snapshot -
    = @snapshot.formatted_date

%table.table.table-striped.table-bordered.table-hover#asset-snapshots-table
  %thead
    %tr
      %th Date
      %th Value
      %th Permalink
      %th

  %tbody
    %tr
      %td= @snapshot.formatted_date
      %td= currency @snapshot.value
      %td
        = link_to @snapshot.permalink, @snapshot
      %td.table-actions
        = link_to [:edit, @snapshot], class: 'btn btn-info' do
          %i.icon-edit
        = link_to @snapshot, method: 'delete', class: 'btn btn-danger', data: { confirm: t(:confirm) } do
          %i.icon-trash
