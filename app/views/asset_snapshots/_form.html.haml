- if @snapshot.new_record?
  - url = financial_asset_snapshots_path @asset
  - method = 'post'
- else
  - url = asset_snapshot_path @snapshot
  - method = 'put'

= render 'shared/error_messages', obj: @snapshot

= form_for @snapshot, url: url, method: method, html: { class: 'form-horizontal' } do |f|
  .control-group
    = f.label :date, class: 'control-label'
    .controls
      = f.date_select :date, order: [:month, :year], end_year: Time.zone.now.year

  .control-group
    = f.label :value, class: 'control-label'
    .controls
      = f.number_field :value

  .form-actions
    = f.submit 'Save', class: 'btn btn-primary'
