= render 'shared/error_messages', obj: @asset

= form_for @asset, html: { class: 'form-horizontal' } do |f|
  .form-group
    = f.label :name, class: 'control-label col-sm-2'
    .col-sm-4
      = f.text_field :name, autofocus: true, class: 'form-control'

  .form-group
    .col-sm-offset-2.col-sm-10
      .checkbox
        %label
          = f.check_box :investment
          Investment?

  %hr

  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit 'Save', class: 'btn btn-lg btn-primary'
