.navbar.navbar-inverse.navbar-fixed-top
  .navbar-inner
    .container
      %a.btn.btn-navbar{data: { target: '.nav-collapse', toggle: 'collapse' }}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar

      = link_to 'Pecuniary', root_path, class: 'brand'

      .nav-collapse.collapse
        %ul.nav
          %li.dropdown
            = link_to '#', class: 'dropdown-toggle', data: { toggle: 'dropdown' } do
              Assets
              %b.caret

            %ul.dropdown-menu
              %li= link_to 'All', financial_assets_path

              - assets = FinancialAsset.order(:name)
              - unless assets.length.zero?
                %li.divider
                - assets.each do |asset|
                  %li= link_to asset, asset
