.navbar.navbar-inverse.navbar-fixed-top
  .navbar-inner
    .container
      %a.btn.btn-navbar{data: { target: '.nav-collapse', toggle: 'collapse' }}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar

      = link_to 'Pecuniary', root_path, class: 'brand'

      .nav-collapse.collapse
        %ul.nav
          %li.dropdown{class: nav_class(:financial_assets)}
            = link_to '#', class: 'dropdown-toggle', data: { toggle: 'dropdown' } do
              Assets
              %b.caret

            %ul.dropdown-menu
              %li= link_to 'All', financial_assets_path

              %li.divider

              %li.nav-header Regular Accounts
              - non_investments = FinancialAsset.non_investments.order(:name)
              - unless non_investments.length.zero?
                - non_investments.each do |asset|
                  %li= link_to asset, asset

              %li.nav-header Investments
              - investments = FinancialAsset.investments.order(:name)
              - unless investments.length.zero?
                - investments.each do |asset|
                  %li= link_to asset, asset

          %li{class: nav_class(:contributions)}
            = link_to 'Contributions', contributions_path

        %p.navbar-text.pull-right
          - if admin?
            = link_to 'Logout', logout_path, method: 'delete'
          - else
            = link_to 'Login', login_path
