- @title = 'Milestones'

.page-header
  - if admin?
    .pull-right
      = link_to new_milestone_path, class: 'btn btn-lg btn-success' do
        = icon 'plus-circle'
        Milestone

  %h1
    = @title

- unless @milestones.length.zero?
  %ul.timeline
    - @milestones.each do |milestone|
      %li{class: cycle(nil, 'timeline-inverted')}
        .timeline-panel
          .timeline-heading
            - if admin?
              .pull-right
                = link_to [:edit, milestone], class: 'btn btn-info btn-xs' do
                  = icon :edit

                = link_to milestone, method: 'delete', class: 'btn btn-danger btn-xs', data: { confirm: t(:confirm) } do
                  = icon 'trash-o'

            %h4.timeline-title
              = link_to milestone, milestone

          .timeline-body
            = kramdown milestone.notes
- else
  %p There are no milestones.
