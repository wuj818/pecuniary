- @title = @milestone

.page-header
  .pull-right
    = link_to :milestones, class: 'btn btn-lg btn-default' do
      = icon :arrow_left
      Back

    = link_to [:edit, @milestone], class: 'btn btn-lg btn-info' do
      = icon :edit
      Edit

  %h1
    = "Milestone - #{@milestone}"

.row
  .col-md-8
    %table.table.table-striped.table-bordered.table-hover.table-stacked#milestones-table
      %thead
        %tr
          %th Date
          %th Notes
          %th Permalink
          %th

      %tbody
        %tr
          %td
            = @milestone.formatted_date

          %td
            = kramdown @milestone.notes

          %td
            = link_to @milestone.permalink, @milestone

          %td.table-actions
            = link_to [:edit, @milestone], class: 'btn btn-info' do
              = icon :edit

            = link_to @milestone, method: 'delete', class: 'btn btn-danger', data: { confirm: t(:confirm) } do
              = icon :trash
