- if @contribution.new_record?
  - url = financial_asset_contributions_path @asset
  - method = 'post'
- else
  - url = contribution_path @contribution
  - method = 'put'

= render 'shared/error_messages', obj: @contribution

= form_for @contribution, url: url, method: method, html: { class: 'form-horizontal' } do |f|
  .control-group
    = f.label :date, class: 'control-label'
    .controls
      = f.date_select :date, order: [:month, :day, :year], end_year: Time.zone.now.year

  .control-group
    = f.label :amount, class: 'control-label'
    .controls
      = f.number_field :amount

  .form-actions
    = f.submit 'Save', class: 'btn btn-primary'
